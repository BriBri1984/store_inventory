{% extends 'base.html.twig' %}

{% block content %}
<div class="container">

    {% for msg in app.session.flashBag.get('danger') %}
        <div class="alert alert-danger" role="alert">
            {{ msg }}
        </div>
    {% endfor %}
    <div class="row">

            <span class="col-md-3">

                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary">Submit</button>
                {{ form_end(form) }}
            </span>
        <span class="col-md-9">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Store Name</th>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Date Given</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for item in storeStock %}
                        <tr>
                            <td>{{ item.store.storeName }}</td>
                            <td>{{ item.stock.name }}</td>
                            <td>{{ item.quantity }}</td>
                            <td>{{ item.dateGiven|date("m/d/Y") }}</td>

                            {% endfor %}
                        </tr>

                    </tbody>
                </table>
            </span>
    </div>
</div>
    <div class="container">

        {% for msg in app.session.flashBag.get('danger') %}
            <div class="alert alert-danger" role="alert">
                {{ msg }}
            </div>
        {% endfor %}
        <div class="row">

            <span class="col-md-3">

                <form class="form-inline" method="post">
                    <select name="store_id_from_frontend_form" class="form-control">
                        <option value="">Select Store</option>
                        {% for store in storeStock %}

                            <option value="{{ store.store.id }}" selected="selected">{{ store.store.storeName }}</option>

                        {% endfor %}
                    </select>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

            </span>
            <span class="col-md-9">
                <div id="report-container"></div>
            </span>
        </div>
    </div>

    <script src="{{ asset('js/store.stock.js') }}"></script>
{% endblock %}