{% extends 'base.html.twig' %}

{% block content %}
<div class="container">

    <div class="row">

            <span class="col-md-3">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary">Submit</button>
                {{ form_end(form) }}
            </span>
        <span class="col-md-9">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Store Name</th>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for item in storeStock %}
                        <tr>
                            <td>{{ item.store.storeName }}</td>
                            <td>{{ item.stock.name }}</td>
                            <td>{{ item.quantity }}</td>
                            <td>{{ item.dateGiven|date("m/d/Y") }}</td>

                            {% endfor %}
                        </tr>

                    </tbody>
                </table>
            </span>
    </div>
</div>

{% endblock %}